mixin result-block(title, img, text, footer)
    .result-block__title= title
    .row
        .col-lg-auto.text-center
            img(src=`./images/result-block/${img}.jpg` alt= title)

        .col-lg.textblock.mt-15.mt-lg-0
            p.mb-0= text

            .result-block__footer.mt-2
                img.img-fluid.mb-10.mb-xl-0(src="./images/result-block/good/result-block-good-arrow.png" alt="")
                .d-flex.justify-content-end.align-items-center.text-right
                    p.mb-0= footer

                    .result-block__like.ml-10
                        i.icon.smile
                        i.icon.like



